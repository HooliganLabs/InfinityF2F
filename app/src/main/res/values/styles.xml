<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/teal_mid</item>
        <item name="colorPrimaryVariant">@color/teal_mid</item>
        <item name="colorOnPrimary">@color/grey_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_mid</item>
        <item name="colorSecondaryVariant">@color/teal_light</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Section_Title_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

</resources>